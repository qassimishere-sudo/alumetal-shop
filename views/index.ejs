    <script>
        function filterProjects(category, clickedBtn) {
            // 1. تلوين الزراير
            const buttons = document.querySelectorAll('.filter-btn');
            buttons.forEach(btn => {
                btn.className = "filter-btn px-6 py-2.5 rounded-full font-bold bg-white text-slate-600 hover:bg-slate-100 transition-all border-2 border-transparent";
            });
            if (clickedBtn) {
                clickedBtn.className = "filter-btn active px-6 py-2.5 rounded-full font-bold bg-amber-500 text-slate-900 shadow-lg transition-all scale-105 border-2 border-amber-500";
            }

            const cards = document.querySelectorAll('.project-card');

            // 2. منطق الفلترة الجديد
            if (category === 'all') {
                // في حالة "الكل": اعرض 3 فقط من كل نوع
                let counts = {}; // عداد لكل قسم

                cards.forEach(card => {
                    let cat = card.getAttribute('data-category');
                    
                    // لو القسم ده لسه معملناش ليه عداد، ابدأ بـ 0
                    if (!counts[cat]) counts[cat] = 0;

                    if (counts[cat] < 3) {
                        card.style.display = 'block';
                        void card.offsetWidth;
                        card.classList.add('animate-fade-in');
                        counts[cat]++; // زود العداد واحد
                    } else {
                        card.style.display = 'none'; // خفي لو وصلنا لـ 3
                    }
                });

            } else {
                // في حالة قسم محدد: اعرض كله واخفي الباقي
                cards.forEach(card => {
                    if (card.getAttribute('data-category') === category) {
                        card.style.display = 'block';
                        void card.offsetWidth;
                        card.classList.add('animate-fade-in'); 
                    } else {
                        card.style.display = 'none';
                    }
                });
            }
        }

        // تشغيل الفلتر على "الكل" أول ما الصفحة تفتح
        window.onload = function() {
            const allBtn = document.getElementById('btn-all');
            filterProjects('all', allBtn);
        };

        // Secret Admin Login
        let clickCount = 0;
        const logo = document.getElementById('secretLogo');
        logo.addEventListener('click', () => {
            clickCount++;
            if (clickCount === 5) {
                const password = prompt("أدخل كلمة المرور:");
                if (password === "Ammar@123") {
                    window.location.href = "/admin-panel";
                } else {
                    alert("كلمة المرور خاطئة"); clickCount = 0; 
                }
            }
            setTimeout(() => clickCount = 0, 3000);
        });
    </script>
