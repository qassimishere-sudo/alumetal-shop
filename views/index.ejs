    </nav>

    <section id="home" class="relative h-[600px] flex items-center justify-center">
        <div class="absolute inset-0 z-0">
            <img src="https://images.unsplash.com/photo-1600585154340-be6161a56a0c?auto=format&fit=crop&q=80&w=1600" class="w-full h-full object-cover">
            <div class="absolute inset-0 bg-slate-900 bg-opacity-70"></div>
        </div>
        <div class="relative z-10 text-center px-4 max-w-4xl mx-auto">
            <h1 class="text-4xl md:text-6xl font-bold text-white mb-6 leading-tight">
                الهندسية ميتال <br> <span class="text-amber-500 text-4xl">إدارة م/ محسن فاروق</span>
            </h1>
            <p class="text-xl text-gray-200 mb-8 max-w-2xl mx-auto">
                أحدث تصميمات المطابخ، الأبواب، والشبابيك بأعلى خامات الألوميتال.
            </p>
            <div class="flex flex-col sm:flex-row justify-center gap-4">
                <a href="#portfolio" class="px-8 py-3 bg-transparent border-2 border-white text-white rounded-full font-semibold hover:bg-white hover:text-slate-900 transition-all text-lg">شاهد أعمالنا</a>
                <a href="#contact" class="px-8 py-3 bg-amber-500 text-slate-900 rounded-full font-bold hover:bg-amber-600 transition-all flex items-center justify-center gap-2 text-lg">
                    <i class="fas fa-phone"></i> تواصل معنا
                </a>
            </div>
        </div>
    </section>

    <section id="services" class="py-20 bg-white">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="text-center mb-16">
                <h2 class="text-3xl md:text-4xl font-bold text-slate-900 mb-4">خدماتنا المتميزة</h2>
                <div class="w-24 h-1 bg-amber-500 mx-auto rounded"></div>
            </div>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
                <div class="bg-gray-50 p-8 rounded-xl shadow-sm hover:shadow-md transition-shadow border border-gray-100 text-center group">
                    <div class="w-16 h-16 bg-slate-100 rounded-full flex items-center justify-center mx-auto mb-6 group-hover:bg-amber-500 transition-colors">
                        <i class="fas fa-home text-2xl text-slate-900"></i>
                    </div>
                    <h3 class="text-xl font-bold mb-3 text-slate-900">مطابخ مودرن</h3>
                    <p class="text-gray-600">تصميم وتنفيذ أحدث مطابخ الألوميتال، خشمونيوم، وأكريليك.</p>
                </div>
                <div class="bg-gray-50 p-8 rounded-xl shadow-sm hover:shadow-md transition-shadow border border-gray-100 text-center group">
                    <div class="w-16 h-16 bg-slate-100 rounded-full flex items-center justify-center mx-auto mb-6 group-hover:bg-amber-500 transition-colors">
                        <i class="fas fa-layer-group text-2xl text-slate-900"></i>
                    </div>
                    <h3 class="text-xl font-bold mb-3 text-slate-900">شبابيك وأبواب</h3>
                    <p class="text-gray-600">قطاعات PS وجامبو عازلة للصوت والأتربة، زجاج دبل وجورجيا.</p>
                </div>
                <div class="bg-gray-50 p-8 rounded-xl shadow-sm hover:shadow-md transition-shadow border border-gray-100 text-center group">
                    <div class="w-16 h-16 bg-slate-100 rounded-full flex items-center justify-center mx-auto mb-6 group-hover:bg-amber-500 transition-colors">
                        <i class="fas fa-tools text-2xl text-slate-900"></i>
                    </div>
                    <h3 class="text-xl font-bold mb-3 text-slate-900">صيانة وتجديد</h3>
                    <p class="text-gray-600">خدمات صيانة شاملة وتغيير السلك والمقابض والمفصلات.</p>
                </div>
            </div>
        </div>
    </section>

    <section id="portfolio" class="py-20 bg-slate-50">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="text-center mb-12">
                <h2 class="text-3xl md:text-4xl font-bold text-slate-900 mb-4">أحدث أعمالنا</h2>
                <div class="w-24 h-1 bg-amber-500 mx-auto rounded"></div>
            </div>

            <div class="flex justify-center flex-wrap gap-4 mb-10">
                <button onclick="filterProjects('all', this)" class="filter-btn active px-6 py-2 rounded-full font-bold bg-amber-500 text-slate-900 shadow-lg transition-all scale-105 border-2 border-amber-500">الكل</button>
                <button onclick="filterProjects('مطبخ', this)" class="filter-btn px-6 py-2 rounded-full font-medium bg-white text-slate-600 hover:bg-slate-100 transition-all border-2 border-transparent">مطابخ</button>
                <button onclick="filterProjects('شباك', this)" class="filter-btn px-6 py-2 rounded-full font-medium bg-white text-slate-600 hover:bg-slate-100 transition-all border-2 border-transparent">شبابيك</button>
                <button onclick="filterProjects('باب', this)" class="filter-btn px-6 py-2 rounded-full font-medium bg-white text-slate-600 hover:bg-slate-100 transition-all border-2 border-transparent">أبواب</button>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                <% if (projects.length === 0) { %>
                    <div class="col-span-3 text-center py-10 text-gray-500">جاري رفع الأعمال قريباً...</div>
                <% } %>
                
                <% projects.forEach(function(project) { %>
                    <div class="project-card bg-white rounded-xl overflow-hidden shadow-lg group" data-category="<%= project.category %>">
                        <div class="relative overflow-hidden h-64">
                            <img src="<%= project.mainImage %>" class="w-full h-full object-cover transform group-hover:scale-110 transition-transform duration-500">
                            <div class="absolute inset-0 bg-black bg-opacity-40 opacity-0 group-hover:opacity-100 transition-opacity flex items-center justify-center">
                                <a href="/product/<%= project.id %>" class="text-white bg-amber-500 px-4 py-2 rounded-full font-bold text-sm">عرض التفاصيل</a>
                            </div>
                        </div>
                        <div class="p-6 text-right">
                            <h3 class="text-xl font-bold text-slate-900 mb-2"><%= project.title %></h3>
                            <p class="text-gray-500 text-sm mb-4 truncate"><%= project.description %></p>
                            <a href="/product/<%= project.id %>" class="text-amber-600 font-semibold inline-flex items-center hover:text-amber-700">
                                شاهد الصور <i class="fas fa-chevron-left mr-1"></i>
                            </a>
                        </div>
                    </div>
                <% }); %>
            </div>
        </div>
    </section>

    <section id="contact" class="py-20 bg-white">
        <div class="max-w-7xl mx-auto px-4">
            <div class="bg-gray-50 rounded-2xl shadow-xl overflow-hidden border border-gray-100">
                <div class="grid grid-cols-1 md:grid-cols-2">
                    <div class="p-10 md:p-14">
                        <h2 class="text-3xl font-bold text-slate-900 mb-2">تواصل معنا</h2>
                        <h3 class="text-xl text-amber-600 font-bold mb-6">إدارة المهندس/ محسن فاروق</h3>
                        
                        <div class="space-y-6">
                            <div class="flex items-start gap-4">
                                <div class="w-12 h-12 bg-amber-100 rounded-full flex items-center justify-center text-amber-600 mt-1">
                                    <i class="fas fa-phone-alt text-xl"></i>
                                </div>
                                <div>
                                    <p class="text-sm text-gray-500">أرقام الهاتف</p>
                                    <p class="font-bold text-slate-900 text-lg" dir="ltr">012 0422 4500</p>
                                    <p class="font-bold text-slate-900 text-lg" dir="ltr">010 6660 3323</p>
                                </div>
                            </div>

                            <div class="flex items-center gap-4">
                                <div class="w-12 h-12 bg-green-100 rounded-full flex items-center justify-center text-green-600">
                                    <i class="fab fa-whatsapp text-2xl"></i>
                                </div>
                                <div>
                                    <p class="text-sm text-gray-500">واتساب</p>
                                    <a href="https://wa.me/201204224500" target="_blank" class="font-bold text-slate-900 text-lg hover:text-green-600" dir="ltr">012 0422 4500</a>
                                </div>
                            </div>
                            
                            <div class="flex items-center gap-4">
                                <div class="w-12 h-12 bg-blue-100 rounded-full flex items-center justify-center text-blue-600">
                                    <i class="fab fa-facebook-f text-2xl"></i>
                                </div>
                                <div>
                                    <p class="text-sm text-gray-500">تابعنا على فيسبوك</p>
                                    <a href="https://www.facebook.com/share/1BDJjrhUpf/?mibextid=wwXIfr" target="_blank" class="font-bold text-slate-900 text-lg hover:text-blue-600 transition-colors">
                                        الهندسية ميتال
                                    </a>
                                </div>
                            </div>

                            <div class="flex items-center gap-4">
                                <div class="w-12 h-12 bg-gray-200 rounded-full flex items-center justify-center text-gray-600">
                                    <i class="fas fa-map-marker-alt text-xl"></i>
                                </div>
                                <div>
                                    <p class="text-sm text-gray-500">العنوان</p>
                                    <p class="font-bold text-slate-900">القاهرة، مصر (نغطي جميع المحافظات)</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="relative h-full min-h-[300px] bg-slate-800">
                        <img src="https://images.unsplash.com/photo-1534536281715-e28d76689b4d?auto=format&fit=crop&q=80&w=800" class="absolute inset-0 w-full h-full object-cover opacity-60">
                        <div class="absolute inset-0 flex items-center justify-center">
                            <a href="https://wa.me/201204224500" target="_blank" class="inline-block bg-green-500 hover:bg-green-600 text-white font-bold py-3 px-8 rounded-full transition-colors shadow-lg">
                                <i class="fab fa-whatsapp"></i> راسلنا واتساب
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <footer class="bg-slate-950 text-slate-400 py-8 text-center border-t border-slate-800">
        <p>© 2025 الهندسية ميتال - إدارة م/ محسن فاروق.</p>
    </footer>

    <script>
        function filterProjects(category, clickedBtn) {
            const buttons = document.querySelectorAll('.filter-btn');
            buttons.forEach(btn => {
                btn.className = "filter-btn px-6 py-2 rounded-full font-medium bg-white text-slate-600 hover:bg-slate-100 transition-all border-2 border-transparent";
            });

            clickedBtn.className = "filter-btn active px-6 py-2 rounded-full font-bold bg-amber-500 text-slate-900 shadow-lg transition-all scale-105 border-2 border-amber-500";

            const cards = document.querySelectorAll('.project-card');
            cards.forEach(card => {
                if (category === 'all' || card.getAttribute('data-category') === category) {
                    card.style.display = 'block';
                    card.classList.add('animate-fade-in'); 
                } else {
                    card.style.display = 'none';
                }
            });
        }

        let clickCount = 0;
        const logo = document.getElementById('secretLogo');
        logo.addEventListener('click', () => {
            clickCount++;
            if (clickCount === 5) {
                const password = prompt("أدخل كلمة المرور:");
                if (password === "Ammar@123") {
                    window.location.href = "/admin-panel";
                } else {
                    alert("خطأ!"); clickCount = 0; 
                }
            }
            setTimeout(() => clickCount = 0, 3000);
        });
    </script>
</body>
</html>